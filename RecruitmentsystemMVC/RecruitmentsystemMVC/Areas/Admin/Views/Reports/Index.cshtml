@{
    ViewData["Title"] = "Reports";
}

<div class="container-fluid">
    <div class="mb-4">
        <h3 class="fw-bold mb-0">Platform Reports</h3>
        <p class="text-muted small">Analyze system performance and registration statistics.</p>
    </div>

    <div class="row g-4">
        <div class="col-md-6">
            <div class="card p-4 border-0 shadow-sm text-center">
                <i class="bi bi-bar-chart-fill display-5 text-primary mb-3"></i>
                <h5 class="fw-bold">Registration Velocity</h5>
                <p class="text-muted">Monthly user registration trends across all roles.</p>
                <button class="btn btn-outline-primary btn-sm mt-3 px-4">Download PDF</button>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card p-4 border-0 shadow-sm text-center">
                <i class="bi bi-pie-chart-fill display-5 text-success mb-3"></i>
                <h5 class="fw-bold">Application Breakdown</h5>
                <p class="text-muted">Success rate and distribution of hire recommendations.</p>
                <button class="btn btn-outline-success btn-sm mt-3 px-4">Download CSV</button>
            </div>
        </div>
    </div>
</div>
