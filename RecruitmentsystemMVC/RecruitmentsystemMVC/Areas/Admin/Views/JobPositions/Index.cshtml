@{
    ViewData["Title"] = "Job Positions";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold mb-0">Job Positions Oversight</h3>
            <p class="text-muted small">Global view of all job postings across registered companies.</p>
        </div>
    </div>

    <div class="card bg-white border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Position</th>
                            <th>Company</th>
                            <th>Location</th>
                            <th>Status</th>
                            <th class="text-end pe-4">Control</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="ps-4"><span class="fw-bold">Senior Backend Developer</span></td>
                            <td>TechNova Solutions</td>
                            <td>Remote</td>
                            <td><span class="badge bg-success bg-opacity-10 text-success">Public</span></td>
                            <td class="text-end pe-4">
                                <button class="btn btn-sm btn-light text-warning me-2"><i class="bi bi-eye-slash"></i></button>
                                <button class="btn btn-sm btn-light text-danger"><i class="bi bi-trash"></i></button>
                            </td>
                        </tr>
                        <tr>
                            <td class="ps-4"><span class="fw-bold">HR Specialist</span></td>
                            <td>Global Finance Corp</td>
                            <td>New York</td>
                            <td><span class="badge bg-secondary bg-opacity-10 text-secondary">Draft</span></td>
                            <td class="text-end pe-4">
                                <button class="btn btn-sm btn-light text-success me-2"><i class="bi bi-eye"></i></button>
                                <button class="btn btn-sm btn-light text-danger"><i class="bi bi-trash"></i></button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
