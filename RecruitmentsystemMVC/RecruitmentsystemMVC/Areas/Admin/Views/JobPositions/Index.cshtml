@{
    ViewData["Title"] = "Job Positions";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-11">
            <div class="card border-0 shadow-lg rounded-3">
                <div class="card-header bg-primary bg-gradient text-white d-flex justify-content-between align-items-center py-3">
                    <div>
                        <h4 class="mb-0 fw-bold"><i class="bi bi-briefcase me-2"></i>Job Positions</h4>
                        <p class="mb-0 small text-white-50">Manage open positions and job listings</p>
                    </div>
                    <button class="btn btn-light text-primary fw-bold shadow-sm rounded-pill px-4" onclick="openModal()">
                        <i class="bi bi-plus-lg me-1"></i> Add Position
                    </button>
                </div>

                <div class="card-body p-4">
                    <div class="table-responsive">
                        <table id="tblData" class="table table-hover table-striped align-middle" style="width:100%">
                            <thead class="table-light">
                                <tr>
                                    <th class="ps-3 text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Title</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Company</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Location</th>
                                     <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Salary</th>
                                    <th class="text-end pe-3 text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Actions</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- MODAL -->
<div class="modal fade" id="jobModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title fw-bold" id="jobModalLabel"><i class="bi bi-briefcase me-2"></i>Manage Job</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="jobForm">
                <div class="modal-body p-4">
                    <input type="hidden" id="JobPositionId" name="JobPositionId" />
                    
                    <div class="mb-3">
                        <label for="Title" class="form-label fw-bold text-secondary">Job Title</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="bi bi-fonts"></i></span>
                            <input type="text" name="Title" id="Title" class="form-control" placeholder="Software Engineer" required />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="CompanyId" class="form-label fw-bold text-secondary">Company</label>
                         <div class="input-group">
                            <span class="input-group-text bg-light"><i class="bi bi-building"></i></span>
                            <select name="CompanyId" id="CompanyId" class="form-select" required>
                                <option value="">-- Select Company --</option>
                            </select>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="Location" class="form-label fw-bold text-secondary">Location</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="bi bi-geo-alt"></i></span>
                            <input type="text" name="Location" id="Location" class="form-control" placeholder="Remote / City" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="Salary" class="form-label fw-bold text-secondary">Salary</label>
                        <div class="input-group">
                           <span class="input-group-text bg-light"><i class="bi bi-currency-dollar"></i></span>
                            <input type="number" name="Salary" id="Salary" class="form-control" placeholder="0.00" />
                        </div>
                    </div>

                     <div class="mb-3">
                        <label for="JobType" class="form-label fw-bold text-secondary">Job Type</label>
                        <div class="input-group">
                             <span class="input-group-text bg-light"><i class="bi bi-clock"></i></span>
                            <select name="JobType" id="JobType" class="form-select">
                                <option value="Full-time">Full-time</option>
                                <option value="Part-time">Part-time</option>
                                <option value="Contract">Contract</option>
                                <option value="Freelance">Freelance</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="modal-footer bg-light">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-check-circle me-1"></i> Save Job
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        var table;

        $(document).ready(function () {
            loadDataTable();
            loadCompanies();
        });

         function loadDataTable() {
            table = $('#tblData').DataTable({
                ajax: { url: '/Admin/JobPositions/GetAll' },
                columns: [
                    { data: 'title', className: "ps-3 fw-bold text-dark" },
                    { 
                        data: 'companyName',
                        render: function(data) {
                             return `<span class="badge bg-secondary bg-opacity-10 text-secondary border border-secondary border-opacity-25 rounded-pill">${data || 'N/A'}</span>`;
                        } 
                    },
                    { data: 'location', className: "text-secondary" },
                    { 
                        data: 'salary', 
                        render: $.fn.dataTable.render.number(',', '.', 2, '$')
                    },
                    {
                        data: 'jobPositionId',
                        className: "text-end pe-3",
                        render: function (data) {
                            return `
                                <div class="btn-group shadow-sm rounded" role="group">
                                    <button class="btn btn-sm btn-outline-primary" onclick="edit(${data})" title="Edit">
                                        <i class="bi bi-pencil-square"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger" onclick="Delete(${data})" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            `;
                        }
                    }
                ],
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search Jobs..."
                }
            });
        }

        function loadCompanies() {
             $.get('/Admin/JobPositions/GetCompanies', function (data) {
                var options = '<option value="">-- Select Company --</option>';
                $.each(data, function (i, item) {
                    options += `<option value="${item.companyId}">${item.companyName}</option>`;
                });
                $('#CompanyId').html(options);
            });
        }

        function openModal() {
            $('#JobPositionId').val(0);
            $('#jobForm')[0].reset();
            $('#jobModalLabel').html('<i class="bi bi-plus-lg me-2"></i>Add New Position');
            $('#jobModal').modal('show');
        }

        function edit(id) {
            $.get('/Admin/JobPositions/Get/' + id, function (res) {
                $('#JobPositionId').val(res.jobPositionId);
                $('#Title').val(res.title);
                $('#CompanyId').val(res.companyId);
                $('#Location').val(res.location);
                $('#Salary').val(res.salary);
                $('#JobType').val(res.jobType);
                $('#jobModalLabel').html('<i class="bi bi-pencil-square me-2"></i>Edit Job');
                $('#jobModal').modal('show');
            });
        }

        $('#jobForm').submit(function (e) {
            e.preventDefault();

            $.ajax({
                url: '/Admin/JobPositions/Upsert',
                type: 'POST',
                data: $(this).serialize(),
                success: function (res) {
                    if (res.success) {
                        $('#jobModal').modal('hide');
                        table.ajax.reload();
                        const Toast = Swal.mixin({
                            toast: true,
                            position: 'top-end',
                            showConfirmButton: false,
                            timer: 3000,
                            timerProgressBar: true
                        });
                        Toast.fire({
                            icon: 'success',
                            title: 'Job saved successfully'
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: res.message
                        });
                    }
                },
                error: function() {
                     Swal.fire({
                        icon: 'error',
                        title: 'System Error',
                        text: 'An unexpected error occurred.'
                    });
                }
            });
        });

        function Delete(id) {
            Swal.fire({
                title: 'Are you sure?',
                text: "This job position will be permanently deleted!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, delete it!'
            }).then((r) => {
                if (r.isConfirmed) {
                    $.ajax({
                        url: '/Admin/JobPositions/Delete/' + id,
                        type: 'DELETE',
                        success: function (data) {
                            if (data.success) {
                                table.ajax.reload();
                                Swal.fire('Deleted!', 'Job Position has been deleted.', 'success');
                            } else {
                                Swal.fire('Error!', data.message, 'error');
                            }
                        },
                         error: function() {
                            Swal.fire('Error!', 'Could not delete job position.', 'error');
                        }
                    });
                }
            });
        }
    </script>
}
