@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid">
    <div class="mb-4">
        <h3 class="fw-bold">Dashboard Overview</h3>
        <p class="text-muted">Welcome to the GoHire administrative control panel.</p>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-xl-3 col-md-6">
            <div class="card kpi-card bg-white p-3">
                <div class="d-flex align-items-center">
                    <div class="bg-primary bg-opacity-10 p-3 rounded-3 me-3 text-primary">
                        <i class="bi bi-people-fill fs-3"></i>
                    </div>
                    <div>
                        <small class="text-muted d-block mb-1">Total Users</small>
                        <h3 class="fw-bold mb-0">1,284</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card kpi-card bg-white p-3" style="border-left-color: #198754;">
                <div class="d-flex align-items-center">
                    <div class="bg-success bg-opacity-10 p-3 rounded-3 me-3 text-success">
                        <i class="bi bi-shield-check fs-3"></i>
                    </div>
                    <div>
                        <small class="text-muted d-block mb-1">Total Roles</small>
                        <h3 class="fw-bold mb-0">12</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card kpi-card bg-white p-3" style="border-left-color: #ffc107;">
                <div class="d-flex align-items-center">
                    <div class="bg-warning bg-opacity-10 p-3 rounded-3 me-3 text-warning">
                        <i class="bi bi-briefcase fs-3"></i>
                    </div>
                    <div>
                        <small class="text-muted d-block mb-1">Open Jobs</small>
                        <h3 class="fw-bold mb-0">45</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card kpi-card bg-white p-3" style="border-left-color: #0dcaf0;">
                <div class="d-flex align-items-center">
                    <div class="bg-info bg-opacity-10 p-3 rounded-3 me-3 text-info">
                        <i class="bi bi-file-earmark-text fs-3"></i>
                    </div>
                    <div>
                        <small class="text-muted d-block mb-1">Total Apps</small>
                        <h3 class="fw-bold mb-0">892</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card bg-white border-0 shadow-sm">
                <div class="card-header bg-white border-bottom p-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">Recent User Activity</h5>
                    <button class="btn btn-light btn-sm">View All</button>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-3">User</th>
                                    <th>Action</th>
                                    <th>Date</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="ps-3"><span class="fw-semibold">John Doe</span></td>
                                    <td>Updated Profile</td>
                                    <td>2 min ago</td>
                                    <td><span class="badge bg-success bg-opacity-10 text-success">Success</span></td>
                                </tr>
                                <tr>
                                    <td class="ps-3"><span class="fw-semibold">Jane Smith</span></td>
                                    <td>New Registration</td>
                                    <td>15 min ago</td>
                                    <td><span class="badge bg-success bg-opacity-10 text-success">Success</span></td>
                                </tr>
                                <tr>
                                    <td class="ps-3"><span class="fw-semibold">Mike Johnson</span></td>
                                    <td>Password Reset</td>
                                    <td>1 hour ago</td>
                                    <td><span class="badge bg-warning bg-opacity-10 text-warning">Pending</span></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card bg-white border-0 shadow-sm">
                <div class="card-header bg-white border-bottom p-3">
                    <h5 class="mb-0 fw-bold">System Alerts</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex gap-3 mb-3">
                        <div class="text-warning"><i class="bi bi-exclamation-triangle-fill fs-4"></i></div>
                        <div>
                            <h6 class="mb-1">Memory Usage High</h6>
                            <small class="text-muted">Usage exceeded 85% at 4:30 PM</small>
                        </div>
                    </div>
                    <div class="d-flex gap-3">
                        <div class="text-primary"><i class="bi bi-info-circle-fill fs-4"></i></div>
                        <div>
                            <h6 class="mb-1">API Sync Complete</h6>
                            <small class="text-muted">Job positions updated successfully</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

