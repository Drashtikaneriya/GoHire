@{
    ViewData["Title"] = "User Management";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold mb-0">User Management</h3>
            <p class="text-muted small">Manage system users and their login credentials.</p>
        </div>
        <button class="btn btn-primary rounded-pill px-4">
            <i class="bi bi-person-plus me-2"></i> Add New User
        </button>
    </div>

    <div class="card bg-white border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">User</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Status</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <img src="https://ui-avatars.com/api/?name=Admin+User&background=0d6efd&color=fff" class="rounded-circle me-3" width="35">
                                    <span class="fw-semibold">Administrator</span>
                                </div>
                            </td>
                            <td>admin@gohire.com</td>
                            <td><span class="badge bg-primary bg-opacity-10 text-primary">Admin</span></td>
                            <td><span class="badge bg-success bg-opacity-10 text-success">Active</span></td>
                            <td class="text-end pe-4">
                                <button class="btn btn-sm btn-light me-2"><i class="bi bi-pencil"></i></button>
                                <button class="btn btn-sm btn-light text-danger"><i class="bi bi-trash"></i></button>
                            </td>
                        </tr>
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <img src="https://ui-avatars.com/api/?name=HR+Manager&background=198754&color=fff" class="rounded-circle me-3" width="35">
                                    <span class="fw-semibold">Sarah Jenkins</span>
                                </div>
                            </td>
                            <td>sarah.j@gohire.com</td>
                            <td><span class="badge bg-success bg-opacity-10 text-success">HR</span></td>
                            <td><span class="badge bg-success bg-opacity-10 text-success">Active</span></td>
                            <td class="text-end pe-4">
                                <button class="btn btn-sm btn-light me-2"><i class="bi bi-pencil"></i></button>
                                <button class="btn btn-sm btn-light text-danger"><i class="bi bi-trash"></i></button>
                            </td>
                        </tr>
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <img src="https://ui-avatars.com/api/?name=Candidate+User&background=6f42c1&color=fff" class="rounded-circle me-3" width="35">
                                    <span class="fw-semibold">James Wilson</span>
                                </div>
                            </td>
                            <td>james.w@gmail.com</td>
                            <td><span class="badge bg-info bg-opacity-10 text-info">Candidate</span></td>
                            <td><span class="badge bg-warning bg-opacity-10 text-warning">Pending</span></td>
                            <td class="text-end pe-4">
                                <button class="btn btn-sm btn-light me-2"><i class="bi bi-pencil"></i></button>
                                <button class="btn btn-sm btn-light text-danger"><i class="bi bi-trash"></i></button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
