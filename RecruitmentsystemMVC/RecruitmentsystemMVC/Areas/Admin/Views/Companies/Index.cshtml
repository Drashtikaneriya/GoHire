@{
    ViewData["Title"] = "Company Management";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-11">
            <div class="card border-0 shadow-lg rounded-3">
                <div class="card-header bg-primary bg-gradient text-white d-flex justify-content-between align-items-center py-3">
                    <div>
                        <h4 class="mb-0 fw-bold"><i class="bi bi-building me-2"></i>Company Management</h4>
                        <p class="mb-0 small text-white-50">Manage partner companies and organizations</p>
                    </div>
                    <button class="btn btn-light text-primary fw-bold shadow-sm rounded-pill px-4" onclick="openModal()">
                        <i class="bi bi-plus-lg me-1"></i> Add Company
                    </button>
                </div>

                <div class="card-body p-4">
                    <div class="table-responsive">
                        <table id="tblData" class="table table-hover table-striped align-middle" style="width:100%">
                            <thead class="table-light">
                                <tr>
                                    <th class="ps-3 text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Company Name</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Email</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Address</th>
                                    <th class="text-end pe-3 text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Actions</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- UPSERT MODAL (Create / Edit) -->
<div class="modal fade" id="companyModal" tabindex="-1" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title fw-bold" id="companyModalLabel"><i class="bi bi-building-gear me-2"></i>Manage Company</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            
            <form id="companyForm">
                <div class="modal-body p-4">
                    <!-- HIDDEN ID IS CRITICAL FOR EDIT -->
                    <input type="hidden" id="CompanyId" name="CompanyId" value="0" />
                    
                    <div class="mb-3">
                        <label for="CompanyName" class="form-label fw-bold text-secondary">Company Name <span class="text-danger">*</span></label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="bi bi-building"></i></span>
                            <input type="text" name="CompanyName" id="CompanyName" class="form-control" placeholder="Acme Corp" required />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="Email" class="form-label fw-bold text-secondary">Email</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="bi bi-envelope"></i></span>
                            <input type="email" name="Email" id="Email" class="form-control" placeholder="contact@company.com" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="Address" class="form-label fw-bold text-secondary">Address</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="bi bi-geo-alt"></i></span>
                            <input type="text" name="Address" id="Address" class="form-control" placeholder="123 Business Rd" />
                        </div>
                    </div>

                     <div class="mb-3">
                        <label for="Website" class="form-label fw-bold text-secondary">Website</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="bi bi-globe"></i></span>
                            <input type="text" name="Website" id="Website" class="form-control" placeholder="https://example.com" />
                        </div>
                    </div>
                </div>

                <div class="modal-footer bg-light">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-check-circle me-1"></i> <span id="btnSaveText">Save Company</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        var table;

        $(document).ready(function () {
            loadDataTable();
        });

        function loadDataTable() {
            table = $('#tblData').DataTable({
                ajax: {
                    url: '/Admin/Companies/GetAll',
                    dataSrc: 'data'
                },
                columns: [
                    { data: 'companyName', className: "ps-3 fw-bold text-dark" },
                    { data: 'email', className: "text-secondary" },
                    { data: 'address', className: "text-secondary" },
                    {
                        data: null, // Use null to access the whole row object
                        className: "text-end pe-3",
                        render: function (data, type, row) {
                            // Robust ID extraction: Check camelCase then PascalCase
                            var id = row.companyId || row.CompanyId;
                            
                            if (!id) {
                                console.error("Missing Company ID in row data:", row);
                                return '<span class="text-danger">Error</span>';
                            }
                            
                            return `
                                <div class="btn-group shadow-sm rounded" role="group">
                                    <button class="btn btn-sm btn-outline-primary" onclick="edit(${id})" title="Edit">
                                        <i class="bi bi-pencil-square"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger" onclick="Delete(${id})" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            `;
                        }
                    }
                ],
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search Companies..."
                }
            });
        }

        function openModal() {
            $('#CompanyId').val(0); // Reset ID to 0 for Create
            $('#companyForm')[0].reset();
            $('#companyModalLabel').html('<i class="bi bi-plus-lg me-2"></i>Add New Company');
            $('#btnSaveText').text('Save Company');
            $('#companyModal').modal('show');
        }

        function edit(id) {
            console.log("Editing Company ID:", id); // Debug logging
            if (!id) {
                Swal.fire({ icon: 'error', title: 'Error', text: 'Invalid Company ID.' });
                return;
            }

            $.ajax({
                url: '/Admin/Companies/Get/' + id,
                type: 'GET',
                success: function (res) {
                    if (res) {
                        // Handle casing issues (API CamelCase vs Default PascalCase)
                        // This robustly checks both companyId and CompanyId
                        var compId = res.companyId || res.CompanyId;
                        
                        $('#CompanyId').val(compId);
                        $('#CompanyName').val(res.companyName || res.CompanyName);
                        $('#Email').val(res.email || res.Email);
                        $('#Address').val(res.address || res.Address);
                        $('#Website').val(res.website || res.Website);
                        
                        $('#companyModalLabel').html('<i class="bi bi-pencil-square me-2"></i>Edit Company');
                        $('#btnSaveText').text('Update Company');
                        $('#companyModal').modal('show');
                    } else {
                        Swal.fire({ icon: 'error', title: 'Error', text: 'Could not load company data.' });
                    }
                },
                error: function(err) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'Failed to fetch company details.'
                    });
                }
            });
        }

        $('#companyForm').submit(function (e) {
            e.preventDefault();

            $.ajax({
                url: '/Admin/Companies/Upsert',
                type: 'POST',
                data: $(this).serialize(),
                success: function (res) {
                    if (res.success) {
                        $('#companyModal').modal('hide');
                        table.ajax.reload();
                        
                        const Toast = Swal.mixin({
                            toast: true,
                            position: 'top-end',
                            showConfirmButton: false,
                            timer: 3000,
                            timerProgressBar: true
                        });
                        Toast.fire({
                            icon: 'success',
                            title: res.message || 'Saved successfully'
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: res.message
                        });
                    }
                },
                error: function(err) {
                    console.error(err);
                    Swal.fire({
                        icon: 'error',
                        title: 'System Error',
                        text: 'An unexpected error occurred while saving.'
                    });
                }
            });
        });

        function Delete(id) {
            Swal.fire({
                title: 'Are you sure?',
                text: "This company will be permanently deleted!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, delete it!'
            }).then((r) => {
                if (r.isConfirmed) {
                    $.ajax({
                        url: '/Admin/Companies/Delete/' + id,
                        type: 'DELETE',
                        success: function (data) {
                            if (data.success) {
                                table.ajax.reload();
                                Swal.fire('Deleted!', data.message || 'Company has been deleted.', 'success');
                            } else {
                                Swal.fire('Error!', data.message, 'error');
                            }
                        },
                        error: function() {
                            Swal.fire('Error!', 'Could not delete company. Server rejected request.', 'error');
                        }
                    });
                }
            });
        }
    </script>
}
