@{
    ViewData["Title"] = "Companies";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold mb-0">Managed Companies</h3>
            <p class="text-muted small">Partner companies and organizations registered in the portal.</p>
        </div>
        <button class="btn btn-primary rounded-pill px-4">
            <i class="bi bi-plus-circle me-2"></i> Register Company
        </button>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card p-3 shadow-sm border-0">
                <div class="d-flex align-items-center mb-3">
                    <div class="bg-primary bg-opacity-10 p-3 rounded-4 me-3">
                        <i class="bi bi-building fs-3 text-primary"></i>
                    </div>
                    <div>
                        <h6 class="fw-bold mb-0">TechNova Solutions</h6>
                        <small class="text-muted">Software Industry</small>
                    </div>
                </div>
                <div class="mb-3">
                    <small class="d-block text-muted mb-1"><i class="bi bi-geo-alt me-2"></i>New York, USA</small>
                    <small class="d-block text-muted"><i class="bi bi-briefcase me-2"></i>15 Open Positions</small>
                </div>
                <div class="d-flex gap-2">
                    <button class="btn btn-light btn-sm w-100">Profile</button>
                    <button class="btn btn-outline-primary btn-sm w-100">Manage</button>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card p-3 shadow-sm border-0">
                <div class="d-flex align-items-center mb-3">
                    <div class="bg-success bg-opacity-10 p-3 rounded-4 me-3">
                        <i class="bi bi-bank fs-3 text-success"></i>
                    </div>
                    <div>
                        <h6 class="fw-bold mb-0">Global Finance Corp</h6>
                        <small class="text-muted">Banking & Finance</small>
                    </div>
                </div>
                <div class="mb-3">
                    <small class="d-block text-muted mb-1"><i class="bi bi-geo-alt me-2"></i>London, UK</small>
                    <small class="d-block text-muted"><i class="bi bi-briefcase me-2"></i>8 Open Positions</small>
                </div>
                <div class="d-flex gap-2">
                    <button class="btn btn-light btn-sm w-100">Profile</button>
                    <button class="btn btn-outline-primary btn-sm w-100">Manage</button>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card p-3 shadow-sm border-0">
                <div class="d-flex align-items-center mb-3">
                    <div class="bg-warning bg-opacity-10 p-3 rounded-4 me-3">
                        <i class="bi bi-heart-pulse fs-3 text-warning"></i>
                    </div>
                    <div>
                        <h6 class="fw-bold mb-0">HealthWise Systems</h6>
                        <small class="text-muted">Medical Services</small>
                    </div>
                </div>
                <div class="mb-3">
                    <small class="d-block text-muted mb-1"><i class="bi bi-geo-alt me-2"></i>Toronto, CA</small>
                    <small class="d-block text-muted"><i class="bi bi-briefcase me-2"></i>12 Open Positions</small>
                </div>
                <div class="d-flex gap-2">
                    <button class="btn btn-light btn-sm w-100">Profile</button>
                    <button class="btn btn-outline-primary btn-sm w-100">Manage</button>
                </div>
            </div>
        </div>
    </div>
</div>
