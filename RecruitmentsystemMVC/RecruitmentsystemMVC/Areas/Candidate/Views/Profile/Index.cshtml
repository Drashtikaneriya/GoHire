@{
    ViewData["Title"] = "My Profile";
}

<div class="container">
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm p-4 text-center">
                <div class="mx-auto mb-4 position-relative" style="width: 150px; height: 150px;">
                    <img src="https://ui-avatars.com/api/?name=@(Context.Session.GetString("UserName") ?? "Candidate")&background=6f42c1&color=fff&size=512" class="rounded-circle w-100 h-100 shadow">
                    <button class="btn btn-dark btn-sm rounded-circle position-absolute bottom-0 end-0 p-2"><i class="bi bi-camera"></i></button>
                </div>
                <h4 class="fw-bold mb-1">@Context.Session.GetString("UserName")</h4>
                <p class="text-muted">Aspiring Software Engineer</p>
                <hr>
                <div class="text-start">
                    <div class="mb-3">
                        <label class="text-muted small d-block">Email</label>
                        <span class="fw-bold">@Context.Session.GetString("UserName")?.ToLower()@@example.com</span>
                    </div>
                    <div class="mb-3">
                        <label class="text-muted small d-block">Location</label>
                        <span class="fw-bold">New York, USA</span>
                    </div>
                </div>
                <button class="btn btn-outline-purple w-100 mt-3 rounded-pill">Edit Profile</button>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card border-0 shadow-sm p-4 mb-4">
                <h5 class="fw-bold mb-4">Professional Resume</h5>
                <div class="d-flex align-items-center gap-4 bg-light p-4 rounded-4">
                    <i class="bi bi-file-earmark-pdf-fill display-4 text-danger"></i>
                    <div class="flex-grow-1">
                        <h6 class="fw-bold mb-1">Resume_John_Doe_2024.pdf</h6>
                        <small class="text-muted">Uploaded 1 month ago â€¢ 1.2 MB</small>
                    </div>
                    <button class="btn btn-light rounded-pill"><i class="bi bi-download"></i></button>
                </div>
            </div>
            <div class="card border-0 shadow-sm p-4">
                <h5 class="fw-bold mb-4">Skills & Expertise</h5>
                <div class="d-flex flex-wrap gap-2">
                    <span class="badge bg-purple text-white px-3 py-2 rounded-pill">.NET 8</span>
                    <span class="badge bg-purple text-white px-3 py-2 rounded-pill">Azure Cloud</span>
                    <span class="badge bg-purple text-white px-3 py-2 rounded-pill">React.js</span>
                    <span class="badge bg-purple text-white px-3 py-2 rounded-pill">UI Design</span>
                    <span class="badge bg-light text-dark px-3 py-2 rounded-pill border">+ Add Skill</span>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-outline-purple {
        border-color: var(--cand-primary);
        color: var(--cand-primary);
    }
    .btn-outline-purple:hover {
        background-color: var(--cand-primary);
        color: white;
    }
    .bg-purple {
        background-color: var(--cand-primary);
    }
</style>
