@{
    ViewData["Title"] = "Candidate Dashboard";
}

<div class="container">
    <div class="row g-4">
        <div class="col-12">
            <div class="card welcome-card mb-4 border-0">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <h1 class="fw-bold mb-3">Welcome back, @Context.Session.GetString("UserName")! ✨</h1>
                        <p class="lead mb-4">You have 2 pending applications. Don't forget to check your interview schedule.</p>
                        <button class="btn btn-light btn-lg rounded-pill px-4 fw-bold shadow-sm" style="color: #6f42c1;">Explore Jobs</button>
                    </div>
                    <div class="col-md-4 d-none d-md-block text-end">
                        <i class="bi bi-stars" style="font-size: 100px; opacity: 0.2;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <h4 class="fw-bold mb-4">Recommended Jobs</h4>
            <div class="row g-3">
                <div class="col-12">
                    <div class="card p-4 border-0 shadow-sm mb-3">
                        <div class="d-flex justify-content-between align-items-start">
                            <div class="d-flex gap-3">
                                <div class="bg-light p-3 rounded-4">
                                    <i class="bi bi-cpu text-primary fs-3"></i>
                                </div>
                                <div>
                                    <h5 class="fw-bold mb-1">Junior UX Researcher</h5>
                                    <p class="text-muted mb-2">TechNova Solutions • Full-time</p>
                                    <div class="d-flex gap-2">
                                        <span class="badge bg-light text-dark border">Remote</span>
                                        <span class="badge bg-light text-dark border">$4k - $6k</span>
                                    </div>
                                </div>
                            </div>
                            <button class="btn btn-purple">Apply</button>
                        </div>
                    </div>
                    <div class="card p-4 border-0 shadow-sm mb-3">
                        <div class="d-flex justify-content-between align-items-start">
                            <div class="d-flex gap-3">
                                <div class="bg-light p-3 rounded-4">
                                    <i class="bi bi-code-slash text-success fs-3"></i>
                                </div>
                                <div>
                                    <h5 class="fw-bold mb-1">Full Stack Developer Intern</h5>
                                    <p class="text-muted mb-2">CodeCrafters Inc • Internship</p>
                                    <div class="d-flex gap-2">
                                        <span class="badge bg-light text-dark border">On-site</span>
                                        <span class="badge bg-light text-dark border">Stipend</span>
                                    </div>
                                </div>
                            </div>
                            <button class="btn btn-purple">Apply</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <h4 class="fw-bold mb-4">Application Status</h4>
            <div class="card p-4 border-0 shadow-sm">
                <div class="position-relative">
                    <div class="d-flex gap-3 mb-4 section-item">
                        <div class="text-success"><i class="bi bi-check-circle-fill fs-5"></i></div>
                        <div>
                            <h6 class="fw-bold mb-0">Application Submitted</h6>
                            <small class="text-muted">Marketing Manager • Jan 28</small>
                        </div>
                    </div>
                    <div class="d-flex gap-3 mb-4 section-item">
                        <div class="text-primary"><i class="bi bi-clock-history fs-5"></i></div>
                        <div>
                            <h6 class="fw-bold mb-0">Review in Progress</h6>
                            <small class="text-muted">Tech Support • Feb 01</small>
                        </div>
                    </div>
                    <div class="d-flex gap-3 section-item">
                        <div class="text-muted"><i class="bi bi-circle fs-5"></i></div>
                        <div>
                            <h6 class="fw-bold mb-0 text-muted">Interview Round</h6>
                            <small class="text-muted">Awaiting confirmation</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .section-item:not(:last-child) {
        border-left: 2px dashed #e5e7eb;
        margin-left: 10px;
        padding-left: 20px;
        padding-bottom: 20px;
    }
    .section-item:last-child {
        margin-left: 10px;
        padding-left: 20px;
    }
</style>
