<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Candidate Portal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        :root {
            --cand-primary: #6f42c1;
            --cand-secondary: #f3f0ff;
        }

        body {
            background-color: #fdfbff;
            font-family: 'Outfit', sans-serif;
        }

        .navbar {
            background: #fff !important;
            box-shadow: 0 4px 12px rgba(111, 66, 193, 0.08);
            padding: 1rem 0;
        }

        .nav-link {
            font-weight: 500;
            color: #4b5563 !important;
            padding: 0.5rem 1rem !important;
            border-radius: 8px;
            transition: 0.3s;
        }

        .nav-link:hover, .nav-link.active {
            color: var(--cand-primary) !important;
            background: var(--cand-secondary);
        }

        .main-container {
            padding-top: 100px;
            padding-bottom: 50px;
        }

        .btn-purple {
            background-color: var(--cand-primary);
            color: white;
            border: none;
            padding: 10px 24px;
            border-radius: 12px;
            font-weight: 600;
            transition: 0.3s;
        }

        .btn-purple:hover {
            background-color: #59359a;
            color: white;
            transform: translateY(-2px);
        }

        .card {
            border: none;
            border-radius: 20px;
            background: #fff;
            box-shadow: 0 10px 30px rgba(0,0,0,0.03);
        }

        .welcome-card {
            background: linear-gradient(135deg, #6f42c1 0%, #a259ff 100%);
            color: white;
            padding: 40px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg fixed-top">
            <div class="container">
                <a class="navbar-brand fw-bold text-purple" href="/Candidate/Dashboard" style="color: var(--cand-primary);">
                    <i class="bi bi-rocket-takeoff-fill me-2"></i>GoHire
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#candidateNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="candidateNav">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "active" : "")" href="/Candidate/Dashboard">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "ApplyJob" ? "active" : "")" href="/Candidate/ApplyJob">Apply Job</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "MyApplications" ? "active" : "")" href="/Candidate/MyApplications">My Applications</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Profile" ? "active" : "")" href="/Candidate/Profile">Profile</a>
                        </li>

                    </ul>
                    <div class="d-flex align-items-center gap-3">
                        <div class="text-end d-none d-sm-block">
                            <small class="text-muted d-block" style="font-size: 10px;">CANDIDATE</small>
                            <span class="fw-bold">@Context.Session.GetString("UserName")</span>
                        </div>
                        <a href="/Account/Logout" class="btn btn-outline-danger btn-sm rounded-pill px-3">Logout</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main class="container main-container">
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
