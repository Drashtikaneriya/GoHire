<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HR Portal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        :root {
            --hr-primary: #198754;
            --hr-secondary: #f0fdf4;
            --sidebar-width: 250px;
        }

        body {
            background-color: #f8faf9;
            font-family: 'Inter', sans-serif;
        }

        #sidebar {
            width: var(--sidebar-width);
            height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            background: #fff;
            box-shadow: 2px 0 10px rgba(25, 135, 84, 0.05);
            z-index: 1000;
        }

        #content {
            margin-left: var(--sidebar-width);
            padding: 24px;
        }

        .nav-link {
            color: #4b5563;
            padding: 12px 16px;
            display: flex;
            align-items: center;
            gap: 12px;
            transition: 0.2s;
            border-radius: 10px;
            margin: 4px 16px;
        }

        .nav-link:hover, .nav-link.active {
            background-color: var(--hr-primary);
            color: #fff !important;
        }

        .navbar {
            background: rgba(255, 255, 255, 0.8) !important;
            backdrop-filter: blur(8px);
            box-shadow: 0 1px 2px rgba(0,0,0,0.05);
            margin-left: var(--sidebar-width);
        }

        .card {
            border: 1px solid #e5e7eb;
            border-radius: 16px;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .card:hover {
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        }

        .hr-badge {
            background: var(--hr-secondary);
            color: var(--hr-primary);
            font-weight: 600;
            padding: 6px 12px;
            border-radius: 8px;
        }
    </style>
</head>
<body>
    <div id="sidebar">
        <div class="px-4 py-5">
            <h4 class="fw-bold text-success m-0"><i class="bi bi-person-badge me-2"></i>GoHire <span class="text-dark">HR</span></h4>
        </div>
        <div class="mt-2">
            <a href="/HR/Dashboard" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "active" : "")">
                <i class="bi bi-grid-1x2"></i> Dashboard
            </a>
            <a href="/HR/JobPositions" class="nav-link">
                <i class="bi bi-briefcase"></i> Job Positions
            </a>
            <a href="/HR/Applications" class="nav-link">
                <i class="bi bi-file-earmark-person"></i> Applications
            </a>
            <a href="/HR/Interviews" class="nav-link">
                <i class="bi bi-calendar-event"></i> Interviews
            </a>
            <a href="/HR/Candidates" class="nav-link">
                <i class="bi bi-people"></i> Candidates
            </a>
            <hr class="mx-3 my-3">
            <a href="/Account/Logout" class="nav-link text-danger">
                <i class="bi bi-door-open"></i> Logout
            </a>
        </div>
    </div>

    <nav class="navbar navbar-expand-lg navbar-light fixed-top py-3">
        <div class="container-fluid">
            <div class="ms-auto d-flex align-items-center gap-4">
                <div class="d-none d-md-flex align-items-center gap-2">
                    <span class="hr-badge small">Recruitment Specialist</span>
                    <span class="fw-medium">@Context.Session.GetString("UserName")</span>
                </div>
                <div class="dropdown">
                    <a href="#" class="d-block link-dark text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="https://ui-avatars.com/api/?name=@(Context.Session.GetString("UserName") ?? "HR")&background=198754&color=fff" alt="mdo" width="32" height="32" class="rounded-circle">
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end text-small shadow border-0" aria-labelledby="dropdownUser1">
                        <li><a class="dropdown-item" href="#">Profile</a></li>
                        <li><a class="dropdown-item" href="#">Settings</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item text-danger" href="/Account/Logout">Logout</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <div id="content" style="margin-top: 85px;">
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
