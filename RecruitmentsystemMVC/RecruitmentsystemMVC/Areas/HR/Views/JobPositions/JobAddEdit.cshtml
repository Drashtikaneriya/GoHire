@model RecruitmentsystemMVC.Models.JobPositionModel
@{
    ViewData["Title"] = Model.JobPositionId == 0 ? "Create Job" : "Edit Job";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0 mt-4">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0 fw-bold">
                        <i class="bi @(Model.JobPositionId == 0 ? "bi-plus-circle" : "bi-pencil-square") me-2"></i>
                        @(Model.JobPositionId == 0 ? "Create Job Position" : "Edit Job Position")
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Save" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

                        <!-- HIDDEN ID: Critical for Update vs Create logic -->
                        <input type="hidden" asp-for="JobPositionId" />
                        <input type="hidden" asp-for="CreatedBy" />

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Job Title</label>
                                <input asp-for="Title" class="form-control" placeholder="e.g. Senior Developer" required />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Job Type</label>
                                <select asp-for="JobType" class="form-select">
                                    <option value="Full-time">Full-time</option>
                                    <option value="Part-time">Part-time</option>
                                    <option value="Remote">Remote</option>
                                    <option value="Contract">Contract</option>
                                    <option value="Internship">Internship</option>
                                </select>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Company</label>
                                <select asp-for="CompanyId" class="form-select" asp-items="ViewBag.Companies" required>
                                    <option value="">-- Select Company --</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Location</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-geo-alt"></i></span>
                                    <input asp-for="Location" class="form-control" />
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Salary Range</label>
                            <input asp-for="Salary" class="form-control" placeholder="e.g. 50k - 80k" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Job Description</label>
                            <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">Cancel</a>
                            <button type="submit" class="btn btn-primary px-4 fw-bold">
                                <i class="bi bi-check-lg me-1"></i> Save Job
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
