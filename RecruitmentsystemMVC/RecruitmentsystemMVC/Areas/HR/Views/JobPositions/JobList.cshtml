@model List<RecruitmentsystemMVC.Models.JobPositionModel>

@{
    ViewData["Title"] = "Job Positions";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold mb-0">Job Positions</h3>
            <p class="text-muted small">Manage recruitment listings.</p>
        </div>
        <a asp-controller="JobPositions" asp-action="AddEdit" class="btn btn-success rounded-pill px-4">
            <i class="bi bi-plus-lg me-2"></i> Create Job
        </a>
    </div>

    <div class="card bg-white border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Job Title</th>
                            <th>Company</th>
                            <th>Type</th>
                            <th>Location</th>
                            <th>Salary</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="fw-bold text-dark">@item.Title</div>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.CompanyName))
                                        {
                                            <span class="text-muted"><i class="bi bi-building me-1"></i>@item.CompanyName</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-primary bg-opacity-10 text-primary rounded-pill px-3">
                                            @item.JobType
                                        </span>
                                    </td>
                                    <td>
                                        <span class="text-muted"><i class="bi bi-geo-alt-fill me-1 text-secondary"></i>@item.Location</span>
                                    </td>
                                    <td class="fw-bold text-success">@item.Salary</td>
                                    <td class="text-end pe-4">
                                        <a asp-controller="JobPositions" asp-action="AddEdit" asp-route-id="@item.JobPositionId" class="btn btn-sm btn-light border shadow-sm fw-bold text-primary">
                                            <i class="bi bi-pencil-square me-1"></i> Edit
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center py-5">
                                    <div class="text-muted opacity-50 mb-2"><i class="bi bi-briefcase fs-1"></i></div>
                                    <p class="text-muted">No active job postings found.</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
