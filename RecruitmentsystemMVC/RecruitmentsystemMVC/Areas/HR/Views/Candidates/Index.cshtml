@{
    ViewData["Title"] = "Candidates";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold mb-0">Candidate Directory</h3>
            <p class="text-muted small">Search and manage the talent pool across the platform.</p>
        </div>
        <div class="input-group w-auto">
            <input type="text" class="form-control" placeholder="Search talent...">
            <button class="btn btn-success"><i class="bi bi-search"></i></button>
        </div>
    </div>

    <div class="card bg-white border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Candidate Name</th>
                            <th>Expertise</th>
                            <th>Location</th>
                            <th>Reliability</th>
                            <th class="text-end pe-4">Profile</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="bg-info bg-opacity-25 rounded-circle p-2 me-3 fw-bold text-info" style="width: 35px; height:35px; display:flex; align-items:center; justify-content:center;">JD</div>
                                    <span class="fw-bold">John Doe</span>
                                </div>
                            </td>
                            <td>Full Stack Developer</td>
                            <td>San Francisco, CA</td>
                            <td>
                                <div class="progress" style="height: 6px; width: 100px;">
                                    <div class="progress-bar bg-success" style="width: 85%;"></div>
                                </div>
                            </td>
                            <td class="text-end pe-4">
                                <button class="btn btn-sm btn-link text-success p-0 fw-bold">View Portfolio</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
