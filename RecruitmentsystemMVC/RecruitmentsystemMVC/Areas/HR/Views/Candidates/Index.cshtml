@{
    ViewData["Title"] = "Talent Pool Management";
}

<div class="header-gradient shadow-sm animate__animated animate__fadeIn">
    <div class="row align-items-center">
        <div class="col-md-8">
            <h1 class="display-6 fw-bold mb-1"><i class="bi bi-people-fill me-2"></i>Candidates</h1>
            <p class="lead opacity-75 mb-0">Discover and manage your network of skilled professionals.</p>
        </div>
        <div class="col-md-4 text-md-end mt-3 mt-md-0">
            <div class="bg-white bg-opacity-10 p-3 rounded-4 d-inline-block border border-white border-opacity-25 shadow-sm">
                <p class="mb-0 small opacity-75">Total Talent Pool</p>
                <h3 class="mb-0 fw-bold" id="totalCandidatesCount">...</h3>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid mt-n4">
    <div class="card border-0 shadow-sm rounded-4 animate__animated animate__fadeInUp">
        <div class="card-body p-4">
            <div class="table-responsive">
                <table id="tblData" class="table table-hover align-middle" style="width:100%">
                    <thead class="bg-light">
                        <tr class="text-secondary text-uppercase small ls-1">
                            <th>Profile</th>
                            <th>Contact Info</th>

                            <th class="text-center">Experience</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var dataTable;

        $(document).ready(function () {
            loadDataTable();
        });

        function loadDataTable() {
            dataTable = $('#tblData').DataTable({
                "ajax": {
                    "url": "/HR/Candidates/GetAll",
                    "dataSrc": function (json) {
                        $('#totalCandidatesCount').text(json.data ? json.data.length : 0);
                        return json.data || [];
                    }
                },
                "responsive": true,
                "autoWidth": false,
                "language": {
                    "emptyTable": "No candidates found in talent pool",
                    "search": "",
                    "searchPlaceholder": "Search by name, email or skills..."
                },
                "dom": '<"p-2 d-flex justify-content-between align-items-center"f>t<"p-2 d-flex justify-content-between align-items-center"ip>',
                "columns": [
                    { 
                        "data": "fullName", 
                        "width": "25%",
                        "render": function(data) {
                            return `<div class="d-flex align-items-center">
                                        <img src="https://ui-avatars.com/api/?name=${data}&background=4e73df&color=fff" class="rounded-circle me-3 shadow-sm" width="40">
                                        <div>
                                            <div class="fw-bold text-dark fs-6">${data}</div>
                                            <div class="small text-muted text-uppercase fw-bold" style="font-size: 0.65rem; letter-spacing: 0.5px;">Candidate</div>
                                        </div>
                                    </div>`;
                        }
                    },
                    { 
                        "data": "null", 
                        "width": "20%",
                        "render": function(data, type, row) {
                            return `<div class="small">
                                        <div class="mb-1"><i class="bi bi-envelope-fill text-muted me-2"></i>${row.email}</div>
                                        <div><i class="bi bi-telephone-fill text-muted me-2"></i>${row.phone || "N/A"}</div>
                                    </div>`;
                        }
                    },

                    { 
                        "data": "experience", 
                        "width": "15%",
                        "className": "text-center",
                        "render": function(data) {
                            return `<span class="fw-medium text-dark bg-light px-3 py-1 rounded-pill small">${data || "Fresh"}</span>`;
                        }
                    },
                    {
                        "data": "candidateId",
                        "render": function (data) {
                            return `
                                <div class="text-center">
                                    <a href="/HR/Candidates/Details/${data}" class="btn btn-primary btn-sm rounded-pill px-4 shadow-sm fw-bold">
                                        <i class="bi bi-eye-fill me-1"></i> Profile
                                    </a>
                                </div>
                            `
                        },
                        "width": "15%"
                    }
                ]
            });
        }
    </script>
}

<style>
    .mt-n4 { margin-top: -3rem !important; }
    .ls-1 { letter-spacing: 0.5px; }
    .fs-7 { font-size: 0.85rem; }
</style>
