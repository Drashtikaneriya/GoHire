@model RecruitmentsystemMVC.Models.DTOs.DashboardStatsDTO

@{
    ViewData["Title"] = "HR Analytics Dashboard";
}

<!-- Header Section -->
<div class="header-gradient shadow-sm animate__animated animate__fadeInDown">
    <div class="row align-items-center">
        <div class="col-md-7">
            <h1 class="display-5 fw-bold mb-1">Welcome back, HR!</h1>
            <p class="lead opacity-75 mb-0">Here's what's happening with your recruitment pipeline today.</p>
        </div>
        <div class="col-md-5 text-md-end mt-3 mt-md-0">
            <div class="bg-white bg-opacity-10 p-3 rounded-4 d-inline-block border border-white border-opacity-25 shadow-sm">
                <div class="d-flex align-items-center">
                    <div class="me-3">
                        <p class="mb-0 small opacity-75">Today's Date</p>
                        <p class="mb-0 fw-bold">@DateTime.Now.ToString("dd MMM yyyy")</p>
                    </div>
                    <i class="bi bi-calendar3 fs-3 text-white-50"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mt-n5">
    <!-- Stats Cards -->
    <div class="row g-4 animate__animated animate__fadeInUp">
        
        <!-- Total Jobs -->
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm rounded-4 hover-lift overflow-hidden">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div class="bg-primary bg-opacity-10 p-3 rounded-3">
                            <i class="bi bi-briefcase-fill fs-3 text-primary"></i>
                        </div>
                        <span class="badge bg-success bg-opacity-10 text-success rounded-pill fw-bold">+2 New</span>
                    </div>
                    <h6 class="text-muted fw-bold text-uppercase small mb-1 ls-1">Open Positions</h6>
                    <h2 class="display-6 fw-bold mb-0">@(Model?.TotalJobs ?? 0)</h2>
                    <a href="/HR/JobPositions" class="stretched-link"></a>
                </div>
                <div class="progress rounded-0" style="height: 4px;">
                    <div class="progress-bar bg-primary" style="width: 75%"></div>
                </div>
            </div>
        </div>

        <!-- Total Applications -->
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm rounded-4 hover-lift overflow-hidden">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div class="bg-info bg-opacity-10 p-3 rounded-3">
                            <i class="bi bi-file-earmark-person-fill fs-3 text-info"></i>
                        </div>
                        <span class="badge bg-info bg-opacity-10 text-info rounded-pill fw-bold">Active</span>
                    </div>
                    <h6 class="text-muted fw-bold text-uppercase small mb-1 ls-1">Total Applications</h6>
                    <h2 class="display-6 fw-bold mb-0">@(Model?.TotalApplications ?? 0)</h2>
                    <a href="/HR/Applications" class="stretched-link"></a>
                </div>
                <div class="progress rounded-0" style="height: 4px;">
                    <div class="progress-bar bg-info" style="width: 60%"></div>
                </div>
            </div>
        </div>

        <!-- Scheduled Interviews -->
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm rounded-4 hover-lift overflow-hidden">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div class="bg-warning bg-opacity-10 p-3 rounded-3">
                            <i class="bi bi-calendar-check-fill fs-3 text-warning"></i>
                        </div>
                        <span class="badge bg-warning bg-opacity-10 text-warning rounded-pill fw-bold">Upcoming</span>
                    </div>
                    <h6 class="text-muted fw-bold text-uppercase small mb-1 ls-1">Scheduled Interviews</h6>
                    <h2 class="display-6 fw-bold mb-0">@(Model?.TotalInterviews ?? 0)</h2>
                    <a href="/HR/Interviews" class="stretched-link"></a>
                </div>
                <div class="progress rounded-0" style="height: 4px;">
                    <div class="progress-bar bg-warning" style="width: 45%"></div>
                </div>
            </div>
        </div>

        <!-- Total Candidates -->
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm rounded-4 hover-lift overflow-hidden">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div class="bg-danger bg-opacity-10 p-3 rounded-3">
                            <i class="bi bi-people-fill fs-3 text-danger"></i>
                        </div>
                        <span class="badge bg-dark bg-opacity-10 text-dark rounded-pill fw-bold">Talent Pool</span>
                    </div>
                    <h6 class="text-muted fw-bold text-uppercase small mb-1 ls-1">Total Candidates</h6>
                    <h2 class="display-6 fw-bold mb-0">@(Model?.TotalCandidates ?? 0)</h2>
                    <a href="/HR/Candidates" class="stretched-link"></a>
                </div>
                <div class="progress rounded-0" style="height: 4px;">
                    <div class="progress-bar bg-danger" style="width: 85%"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Secondary Info Section -->
    <div class="row g-4 mt-2 animate__animated animate__fadeInUp animate__delay-1s">
        <div class="col-xl-8">
            <div class="card border-0 shadow-sm rounded-4 p-4 h-100">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h5 class="fw-bold mb-0">Recent Activity</h5>
                    <button class="btn btn-sm btn-outline-primary rounded-pill px-3">View All</button>
                </div>
                <div class="list-group list-group-flush">
                    <div class="list-group-item px-0 border-0 mb-3">
                        <div class="d-flex align-items-center">
                            <div class="avatar-sm bg-light-primary text-primary rounded-circle p-2 me-3">
                                <i class="bi bi-person-plus-fill"></i>
                            </div>
                            <div class="flex-grow-1">
                                <p class="mb-0 fw-semibold">New application received</p>
                                <p class="mb-0 small text-muted">John Doe applied for <span class="text-primary fw-medium">Senior Developer</span> role.</p>
                            </div>
                            <span class="small text-muted">2 mins ago</span>
                        </div>
                    </div>
                    <div class="list-group-item px-0 border-0 mb-3">
                        <div class="d-flex align-items-center">
                            <div class="avatar-sm bg-light-warning text-warning rounded-circle p-2 me-3">
                                <i class="bi bi-calendar-event-fill"></i>
                            </div>
                            <div class="flex-grow-1">
                                <p class="mb-0 fw-semibold">Interview Scheduled</p>
                                <p class="mb-0 small text-muted">Technical Interview set for <span class="text-warning fw-medium">Sarah Miller</span>.</p>
                            </div>
                            <span class="small text-muted">1 hour ago</span>
                        </div>
                    </div>
                    <div class="list-group-item px-0 border-0">
                        <div class="d-flex align-items-center">
                            <div class="avatar-sm bg-light-success text-success rounded-circle p-2 me-3">
                                <i class="bi bi-check-circle-fill"></i>
                            </div>
                            <div class="flex-grow-1">
                                <p class="mb-0 fw-semibold">Candidate Hired!</p>
                                <p class="mb-0 small text-muted">Congratulations! <span class="text-success fw-medium">Robert Fox</span> is now part of the team.</p>
                            </div>
                            <span class="small text-muted">5 hours ago</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-4">
            <div class="card border-0 shadow-sm rounded-4 p-4 h-100" style="background: var(--sidebar-bg);">
                <h5 class="fw-bold text-white mb-4">Quick Actions</h5>
                <div class="d-grid gap-3">
                    <a href="/HR/JobPositions/Upsert" class="btn btn-primary bg-gradient rounded-4 p-3 text-start border-0 shadow-sm hover-lift">
                        <div class="d-flex align-items-center">
                            <div class="bg-white bg-opacity-25 p-2 rounded-3 me-3">
                                <i class="bi bi-plus-lg text-white"></i>
                            </div>
                            <div>
                                <p class="mb-0 fw-bold">Post a New Job</p>
                                <p class="mb-0 small opacity-75">Reach more candidates</p>
                            </div>
                        </div>
                    </a>
                    <a href="/HR/Interviews/Upsert" class="btn btn-dark bg-gradient rounded-4 p-3 text-start border-0 shadow-sm hover-lift border border-white border-opacity-10">
                        <div class="d-flex align-items-center">
                            <div class="bg-white bg-opacity-10 p-2 rounded-3 me-3">
                                <i class="bi bi-calendar-plus text-white"></i>
                            </div>
                            <div>
                                <p class="mb-0 fw-bold text-white">Schedule Interview</p>
                                <p class="mb-0 small opacity-50">Manage your calendar</p>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="mt-auto pt-4">
                    <div class="alert bg-white bg-opacity-5 border border-white border-opacity-10 rounded-4 mb-0">
                        <p class="small text-white-50 mb-0"><i class="bi bi-info-circle me-1 text-white"></i> Pro Tip: Use status badges to track candidate progress easily.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .mt-n5 { margin-top: -3.5rem !important; }
    .ls-1 { letter-spacing: 1px; }
    .hover-lift { transition: transform 0.2s, box-shadow 0.2s; }
    .hover-lift:hover { transform: translateY(-5px); box-shadow: 0 1rem 3rem rgba(0,0,0,0.1) !important; }
    .bg-light-primary { background-color: rgba(78, 115, 223, 0.1); }
    .bg-light-warning { background-color: rgba(246, 194, 62, 0.1); }
    .bg-light-success { background-color: rgba(28, 200, 138, 0.1); }
    .ls-1 { letter-spacing: 1px; }
</style>
