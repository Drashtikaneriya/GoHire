@model RecruitmentsystemMVC.Models.DTOs.InterviewDTO

@{
    ViewData["Title"] = Model.InterviewId == 0 ? "Schedule Interview" : "Edit Interview";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card border-0 shadow-sm mt-4">
            <div class="card-header bg-white border-0 py-3">
                <div class="text-center">
                    <h2 class="text-primary fw-bold mb-0">
                        <i class="bi @(Model.InterviewId!=0 ? "bi-pencil-square" : "bi-calendar-plus") me-2"></i>
                        @(Model.InterviewId != 0 ? "Edit Interview" : "Schedule Interview")
                    </h2>
                </div>
            </div>
            <div class="card-body p-4">
                <form method="post" asp-action="Upsert">
                    <input asp-for="InterviewId" type="hidden" />
                    <!-- Assuming InterviewerId is required but maybe not editable or hidden/defaulted for now -->
                    <input asp-for="InterviewerId" type="hidden" value="1" /> 

                    @if (Model.InterviewId != 0)
                    {
                        <div class="mb-3">
                            <label class="form-label fw-bold opacity-7">Application / Candidate</label>
                            <input asp-for="ApplicationId" type="hidden" />
                            <input type="text" class="form-control bg-light" value="@Model.CandidateName" readonly />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold opacity-7">Job Title</label>
                            <input type="text" class="form-control bg-light" value="@Model.JobTitle" readonly />
                        </div>
                    }
                    else
                    {
                        <div class="mb-3">
                            <label asp-for="ApplicationId" class="form-label fw-bold">Select Candidate / Application</label>
                            <select asp-for="ApplicationId" asp-items="@ViewBag.Applications" class="form-select">
                                <option disabled selected>-- Select Application --</option>
                            </select>
                            <span asp-validation-for="ApplicationId" class="text-danger"></span>
                        </div>
                    }

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="InterviewDate" class="form-label fw-bold">Interview Date & Time</label>
                            <input asp-for="InterviewDate" type="datetime-local" class="form-control" />
                            <span asp-validation-for="InterviewDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Mode" class="form-label fw-bold">Interview Mode</label>
                            <select asp-for="Mode" class="form-select">
                                <option value="Online">Online</option>
                                <option value="Offline">Offline</option>
                            </select>
                            <span asp-validation-for="Mode" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="RoundNo" class="form-label fw-bold">Round Number</label>
                            <input asp-for="RoundNo" type="number" class="form-control" min="1" max="10" />
                            <span asp-validation-for="RoundNo" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Result" class="form-label fw-bold">Result</label>
                            <select asp-for="Result" class="form-select">
                                <option value="Pending">Pending</option>
                                <option value="Passed">Passed</option>
                                <option value="Failed">Failed</option>
                            </select>
                            <span asp-validation-for="Result" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Feedback" class="form-label fw-bold">Feedback</label>
                        <textarea asp-for="Feedback" class="form-control" rows="4" placeholder="Enter interview feedback..."></textarea>
                        <span asp-validation-for="Feedback" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary px-4">Cancel</a>
                        <button type="submit" class="btn btn-primary px-4">
                            <i class="bi bi-check-lg me-2"></i>@(Model.InterviewId != 0 ? "Update" : "Schedule")
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
