@model IEnumerable<RecruitmentsystemMVC.Models.DTOs.InterviewDTO>

@{
    ViewData["Title"] = "Interviews";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark"><i class="bi bi-calendar-event me-2"></i>Interviews</h2>
        <a asp-controller="Interviews" asp-action="Upsert" class="btn btn-primary rounded-pill px-4">
            <i class="bi bi-plus-lg me-2"></i>Schedule Interview
        </a>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-4">
            <table id="interviewsTable" class="table table-hover align-middle w-100">
                <thead class="table-light">
                    <tr>
                        <th class="text-secondary text-uppercase text-xs font-weight-bolder opacity-7">ID</th>
                        <th class="text-secondary text-uppercase text-xs font-weight-bolder opacity-7">Candidate</th>
                        <th class="text-secondary text-uppercase text-xs font-weight-bolder opacity-7">Date</th>
                        <th class="text-secondary text-uppercase text-xs font-weight-bolder opacity-7">Mode</th>
                        <th class="text-secondary text-uppercase text-xs font-weight-bolder opacity-7">Round</th>
                        <th class="text-secondary text-uppercase text-xs font-weight-bolder opacity-7">Result</th>
                        <th class="text-secondary text-uppercase text-xs font-weight-bolder opacity-7">Feedback</th>
                        <th class="text-secondary text-uppercase text-xs font-weight-bolder opacity-7 text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Data loaded via API/AJAX -->
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        var dataTable;

        $(document).ready(function () {
            loadDataTable();
        });

        function loadDataTable() {
            dataTable = $('#interviewsTable').DataTable({
                "ajax": {
                    "url": "/HR/Interviews/GetAll",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "interviewId", "width": "5%" },
                    { 
                        "data": "candidateName",
                        "width": "15%",
                        "render": function(data) {
                            return `<span class="fw-bold text-dark">${data || 'N/A'}</span>`;
                        }
                    },
                    { 
                        "data": "interviewDate", 
                        "width": "15%",
                        "render": function(data) {
                           return new Date(data).toLocaleString();
                        }
                    },
                    { "data": "mode", "width": "10%" },
                    { "data": "roundNo", "width": "5%" },
                    { 
                        "data": "result", 
                        "width": "10%",
                        "render": function(data) {
                            let color = 'secondary';
                            if (data === 'Pending') color = 'warning';
                            else if (data === 'Passed') color = 'success';
                            else if (data === 'Failed') color = 'danger';
                            
                            return `<span class="badge bg-${color}">${data || 'Pending'}</span>`;
                        }
                    },
                    { 
                        "data": "feedback", 
                        "width": "20%",
                        "render": function(data) {
                            return data ? `<span title="${data}">${data.length > 30 ? data.substring(0, 30) + '...' : data}</span>` : '<span class="text-muted fst-italic">No feedback</span>';
                        }
                    },
                    {
                        "data": "interviewId",
                        "width": "15%",
                        "render": function (data) {
                            return `
                                <div class="text-end">
                                    <a href="/HR/Interviews/Upsert?id=${data}" class="btn btn-sm btn-outline-success mx-1">
                                         <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a onclick="Delete('/HR/Interviews/Delete/${data}')" class="btn btn-sm btn-outline-danger mx-1">
                                         <i class="bi bi-trash-fill"></i> Delete
                                    </a>
                                </div>
                            `;
                        }
                    }
                ],
                "language": {
                    "emptyTable": "No interviews found"
                }
            });
        }

        function Delete(url) {
            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#d33",
                cancelButtonColor: "#3085d6",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: url,
                        type: 'DELETE',
                        success: function (data) {
                            if (data.success) {
                                dataTable.ajax.reload();
                                Swal.fire("Deleted!", data.message, "success");
                            } else {
                                Swal.fire("Error", data.message, "error");
                            }
                        }
                    });
                }
            });
        }
    </script>
}
